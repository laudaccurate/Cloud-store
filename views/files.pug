extends ./layout

block main
  h1.display-4.text-center.my-4 Files

  .main-content
    a(class="btn btn-primary btn-block my-4" href="/files/upload") Upload a new File
    ul.list-group
      each file in files
        li.list-group.item
          a(href=`/files/${file._id}/download`)= file.originalName